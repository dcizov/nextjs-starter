{
  "name": "next-starter",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "check": "npm run lint && npm run typecheck",
    "lint": "eslint \"**/*.{ts,tsx,js,jsx}\" --cache",
    "lint:fix": "eslint \"**/*.{ts,tsx,js,jsx}\" --fix --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,mdx}\" --cache",
    "format:write": "prettier --write \"**/*.{ts,tsx,js,jsx,md,mdx}\" --cache",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "dependencies": {
    "next": "15.5.4",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4",
    "typescript": "^5",
    "typescript-eslint": "^8.45.0"
  }
}
